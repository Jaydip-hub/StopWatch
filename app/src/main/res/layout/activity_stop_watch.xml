<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bgCircleImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/bgcircle"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        />

    <ImageView
        android:id="@+id/bgAnchorImage"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@drawable/icanchor"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        />

    <Chronometer
        android:id="@+id/timerHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bgAnchorImage"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="Start Now"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_above="@+id/btnStop"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgbutton"
        />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="Finish Workout"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btnstopbg"
        />

</RelativeLayout>